      document.addEventListener('DOMContentLoaded', function() {
        function limparEmojisQuebrados(elemento) {
          if (elemento.nodeType === Node.TEXT_NODE) {
            if (elemento.textContent.includes('????')) {
              elemento.textContent = elemento.textContent.replace(/\?\?\?\?/g, '');
            }
          } else if (elemento.nodeType === Node.ELEMENT_NODE) {
            for (let i = 0; i < elemento.childNodes.length; i++) {
              limparEmojisQuebrados(elemento.childNodes[i]);
            }
          }
        }

        limparEmojisQuebrados(document.body);
      });
    })();
