   console.log("V1.5.1");
      function mostrarValidacaoModal(mensagem, mostrarSpinner = true) {
        let modal = document.getElementById('validationModal');
        if (!modal) {
          modal = document.createElement('div');
          modal.id = 'validationModal';
          modal.style.cssText = `
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            background: rgba(0,0,0,0.7); display: flex; justify-content: center; 
            align-items: center; z-index: 10000;
          `;
          
          const content = document.createElement('div');
          content.style.cssText = `
            background: white; padding: 30px; border-radius: 15px; 
            text-align: center; max-width: 400px; box-shadow: 0 8px 32px rgba(0,0,0,0.3);
          `;
          
          const spinner = document.createElement('div');
          spinner.id = 'validationSpinner';
          spinner.style.cssText = `
            border: 4px solid #f3f3f3; border-top: 4px solid #036e04;
            border-radius: 50%; width: 40px; height: 40px; 
            animation: spin 1s linear infinite; margin: 0 auto 15px;
          `;
          
          const text = document.createElement('div');
          text.id = 'validationStatus';
          text.style.cssText = 'font-size: 1.1rem; color: #036e04; font-weight: 600;';
          text.textContent = mensagem;
          
          content.appendChild(spinner);
          content.appendChild(text);
          modal.appendChild(content);
          document.body.appendChild(modal);
          
          if (!document.getElementById('validation-spin-style')) {
            const style = document.createElement('style');
            style.id = 'validation-spin-style';
            style.textContent = `
              @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
              }
            `;
            document.head.appendChild(style);
          }
        } else {
          document.getElementById('validationStatus').textContent = mensagem;
          const spinner = document.getElementById('validationSpinner');
          spinner.style.display = mostrarSpinner ? 'block' : 'none';
        }
        modal.style.display = 'flex';
      }
      
      function fecharValidacaoModal(sucesso = true) {
        const modal = document.getElementById('validationModal');
        if (modal) {
          setTimeout(() => {
            modal.style.display = 'none';
          }, sucesso ? 1500 : 3000);
        }
      }
      
      function obterHorarioAtual() {
        const agora = new Date();
        const horas = String(agora.getHours()).padStart(2, '0');
        const minutos = String(agora.getMinutes()).padStart(2, '0');
        return `${horas}:${minutos}`;
      }
      
      function validarHorario(horarioEncontrado, horarioEnvio, tolerancia = 2) {
        const [horaEnc, minEnc] = horarioEncontrado.split(':').map(Number);
        const [horaEnv, minEnv] = horarioEnvio.split(':').map(Number);
        
        const minutosEncontrado = horaEnc * 60 + minEnc;
        const minutosEnvio = horaEnv * 60 + minEnv;
        
        const diferenca = Math.abs(minutosEncontrado - minutosEnvio);
        
        return diferenca <= tolerancia;
      }
      
      async function validarEnvioMensagem(username, tentativa = 1) {
        const maxTentativas = 6;
        const intervaloTentativa = 10000;
        
        mostrarValidacaoModal(`Validando envio da mensagem... (Tentativa ${tentativa}/${maxTentativas})`);
        
        try {
          const horarioEnvio = obterHorarioAtual();
          console.log(`[VALIDA√á√ÉO] Hor√°rio de envio: ${horarioEnvio}`);
          
          await new Promise(resolve => setTimeout(resolve, 3000));
          
          const response = await fetch('https://www.policiarcc.com/privmsg?folder=outbox');
          const html = await response.text();
          
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          
          const mensagens = doc.querySelectorAll('li.row');
          
          for (const msg of mensagens) {
            const emTag = msg.querySelector('em');
            
            if (emTag) {
              const textoCompleto = emTag.textContent.trim();
              const linkUsuario = emTag.querySelector('a');
              
              if (linkUsuario) {
                let destinatario = linkUsuario.textContent.trim();
                destinatario = destinatario.replace(/\s+/g, ' ').trim();
                
                if (destinatario.toLowerCase() === username.toLowerCase()) {
                  console.log(`[VALIDA√á√ÉO] Mensagem encontrada para ${username}: "${textoCompleto}"`);
                  
                  if (textoCompleto.toLowerCase().includes('hoje')) {
                    const matchHora = textoCompleto.match(/(\d{1,2}):(\d{2})/);
                    
                    if (matchHora) {
                      console.log(`[VALIDA√á√ÉO] Hor√°rio encontrado: ${matchHora[0]}, Hor√°rio atual: ${horarioEnvio}`);
                      
                      if (validarHorario(matchHora[0], horarioEnvio, 2)) {
                        console.log(`[VALIDA√á√ÉO] ‚úì Envio confirmado para ${username} √†s ${matchHora[0]}`);
                        mostrarValidacaoModal('‚úÖ Mensagem validada com sucesso!', false);
                        fecharValidacaoModal(true);
                        return true;
                      } else {
                        console.log(`[VALIDA√á√ÉO] ‚úó Hor√°rio fora da toler√¢ncia para ${username}`);
                      }
                    }
                  } else {
                    console.log(`[VALIDA√á√ÉO] ‚úó Mensagem n√£o √© de hoje para ${username}`);
                  }
                }
              }
            }
          }
          
          console.log(`[VALIDA√á√ÉO] ‚úó Envio n√£o detectado para ${username} (Tentativa ${tentativa})`);
          
          if (tentativa < maxTentativas) {
            mostrarValidacaoModal(`Aguardando confirma√ß√£o... (Tentativa ${tentativa + 1}/${maxTentativas})`);
            await new Promise(resolve => setTimeout(resolve, intervaloTentativa));
            return validarEnvioMensagem(username, tentativa + 1);
          } else {
            mostrarValidacaoModal('‚ö†Ô∏è N√£o foi poss√≠vel validar o envio. Verifique manualmente.', false);
            fecharValidacaoModal(false);
            return false;
          }
        } catch (error) {
          console.error('[VALIDA√á√ÉO] Erro:', error);
          mostrarValidacaoModal('‚ùå Erro na valida√ß√£o. Verifique manualmente.', false);
          fecharValidacaoModal(false);
          return false;
        }
      }
      
      async function validarEnvioPostagem(topico, tentativa = 1) {
        const maxTentativas = 6;
        const intervaloTentativa = 10000;
        
        mostrarValidacaoModal(`Validando postagem... (Tentativa ${tentativa}/${maxTentativas})`);
        
        try {
          const horarioEnvio = obterHorarioAtual();
          console.log(`[VALIDA√á√ÉO POST] Hor√°rio de envio: ${horarioEnvio}`);
          
          await new Promise(resolve => setTimeout(resolve, 3000));
          
          const urlsTopicos = {
            '36952': 'https://www.policiarcc.com/t36952-sup-resumo-da-reuniao-geral?view=newest',
            '37322': 'https://www.policiarcc.com/t37322-sup-hall-dos-destaques?view=newest'
          };
          
          const urlFetch = urlsTopicos[topico] || `https://www.policiarcc.com/t${topico}?view=newest`;
          console.log(`[VALIDA√á√ÉO POST] Buscando em: ${urlFetch}`);
          
          const response = await fetch(urlFetch);
          const html = await response.text();
          
          const parser = new DOMParser();
          const doc = parser.parseFromString(html, 'text/html');
          
          const posts = doc.querySelectorAll('.post, div[class*="post"]');
          
          for (const post of posts) {
            const timeSpans = post.querySelectorAll('span, .time, .date, .post-header .right');
            
            for (const timeSpan of timeSpans) {
              const dataHora = timeSpan.textContent.trim();
              
              if (dataHora.includes('Hoje') || dataHora.includes('hoje')) {
                const matchHora = dataHora.match(/(\d{1,2}):(\d{2})/);
                
                if (matchHora) {
                  console.log(`[VALIDA√á√ÉO POST] Hor√°rio encontrado: ${matchHora[0]}, Hor√°rio envio: ${horarioEnvio}`);
                  
                  if (validarHorario(matchHora[0], horarioEnvio, 3)) {
                    console.log(`[VALIDA√á√ÉO POST] ‚úì Postagem confirmada √†s ${matchHora[0]}`);
                    mostrarValidacaoModal('‚úÖ Postagem validada com sucesso!', false);
                    fecharValidacaoModal(true);
                    return true;
                  } else {
                    console.log(`[VALIDA√á√ÉO POST] ‚úó Hor√°rio fora da toler√¢ncia`);
                  }
                }
              }
            }
          }
          
          console.log(`[VALIDA√á√ÉO POST] ‚úó Postagem n√£o detectada (Tentativa ${tentativa})`);
          
          if (tentativa < maxTentativas) {
            mostrarValidacaoModal(`Aguardando confirma√ß√£o... (Tentativa ${tentativa + 1}/${maxTentativas})`);
            await new Promise(resolve => setTimeout(resolve, intervaloTentativa));
            return validarEnvioPostagem(topico, tentativa + 1);
          } else {
            mostrarValidacaoModal('‚ö†Ô∏è N√£o foi poss√≠vel validar a postagem. Verifique manualmente.', false);
            fecharValidacaoModal(false);
            return false;
          }
        } catch (error) {
          console.error('[VALIDA√á√ÉO POST] Erro:', error);
          mostrarValidacaoModal('‚ùå Erro na valida√ß√£o. Verifique manualmente.', false);
          fecharValidacaoModal(false);
          return false;
        }
      }
      
      
       async function enviarPostagem(topico, bbcode) {
      console.log('=== ENVIO DE POST EM T√ìPICO ===');
      console.log('Usu√°rio ou grupo:', `T√≥pico ID: ${topico}`);
      console.log('T√≠tulo:', 'Resposta no t√≥pico');
      console.log('Mensagem:', bbcode);
      console.log('================================');
      
      return new Promise(async (resolve, reject) => {
        try {
          const postResponse = await $.post('/post', {
            t: topico,
            message: bbcode,
            mode: 'reply',
            post: 1,
          });
          
          const validado = await validarEnvioPostagem(topico);
          
          if (validado) {
            console.log('‚úÖ Postagem validada com sucesso!');
          } else {
            console.warn('‚ö†Ô∏è Postagem n√£o validada, mas pode ter sido enviada.');
          }
          
          resolve(postResponse);
        } catch (error) {
          const errorDetails = {
            xhr: error.xhr || error,
            status: error.status || 'unknown',
            error: error.error || error.message
          };
          reject(errorDetails);
        }
      });
    }

    function send_MPGroup(title, usergroup, message){
      console.log('=== ENVIO DE MP PARA GRUPO ===');
      console.log('Usu√°rio ou grupo:', `Grupo ID: ${usergroup}`);
      console.log('T√≠tulo:', title);
      console.log('Mensagem:', message);
      console.log('================================');
      showLoading();
      
      $.post('/privmsg',{
        folder: 'inbox',
        mode: 'post',
        post: '1',
        usergroup: usergroup,
        subject: title,
        message: message
        }).done(function () {
        hideLoading();
        showSuccessPopup("Mensagem Privada enviada!");
        }).fail(function (){
        hideLoading();
        alert("Erro");
      })
    }

    async function send_MP(title, user, message){
      console.log('=== ENVIO DE MP INDIVIDUAL ===');
      console.log('Usu√°rio ou grupo:', user);
      console.log('T√≠tulo:', title);
      console.log('Mensagem:', message);
      console.log('================================');
      showLoading();
      
      return new Promise(async (resolve, reject) => {
        try {
          await $.post('/privmsg',{
            folder: 'inbox',
            mode: 'post',
            post: '1',
            username: user,
            subject: title,
            message: message
          });
          
          hideLoading();
          
          const validado = await validarEnvioMensagem(user);
          
          if (validado) {
            console.log('‚úÖ Mensagem validada com sucesso!');
            showSuccessPopup("Mensagem Privada enviada para " + user);
          } else {
            console.warn('‚ö†Ô∏è Mensagem n√£o validada, mas pode ter sido enviada.');
            showSuccessPopup("Mensagem enviada para " + user + " (valida√ß√£o pendente)");
          }
          
          resolve();
        } catch (error) {
          hideLoading();
          alert("Erro ao enviar mensagem para " + user);
          reject(error);
        }
      });
    }

    function showLoading() {
      console.log('üîÑ Mostrando loading...');
    }

    function hideLoading() {
      console.log('‚úÖ Escondendo loading...');
    }

    function showSuccessPopup(message) {
      console.log('üéâ Sucesso:', message);
      alert(message);
    }

